%h1 Listing tasks

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Title
      %th Description
      %th Due on
      %th User
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.description
        %td= task.due_on
        %td= task.user_name
        %td
          = link_to 'Show', task, class: 'btn btn-primary btn-sm' if can? :read, task
          = link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' if can? :update, task
          = link_to 'Destroy', task, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } if can? :destroy, task

%br

= link_to 'New Task', new_task_path
